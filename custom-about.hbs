{{!< default}}

{{#post}}
<article class="gh-article gh-article--about {{post_class}}"> {{!-- Added --about modifier --}}

    <header class="gh-header gh-header--about gh-canvas"> {{!-- Added --about modifier --}}
        <h1 class="gh-title">{{title}}</h1>
    </header>

    {{#if feature_image}}
        <figure class="gh-feature-image gh-feature-image--about gh-canvas"> {{!-- Added --about modifier --}}
            {{!-- The circular image with background will be handled mostly by CSS --}}
            <img src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
        </figure>
    {{/if}}

    <div class="gh-content gh-content--about gh-canvas"> {{!-- Added --about modifier --}}
        {{content}}
    </div>

</article>
{{/post}}